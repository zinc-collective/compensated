#!/usr/bin/env bash


# Configure the script to be verbose and fail early
# See: https://ss64.com/bash/set.html
# See: https://bash.cyberciti.biz/guide/$IFS
set -euo pipefail
IFS=$'\n\t'
set -vx

RUBY_OUTPUT=$(ruby -v)
if [[ $RUBY_OUTPUT == *"ruby 2.4"* ]]; then
  echo "Skipping Ruby 2.4"
else
  # Run RSpec
  bin/rspec
fi